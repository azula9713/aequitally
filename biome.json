{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!convex/_generated/*.d.ts",
			"!components/ui/*.tsx",
			"!app/*.css"
		]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
